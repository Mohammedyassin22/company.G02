
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";}
<br />
<br />
<a asp-action="create" asp-controller="Department" class="btn btn-danger">create department</a>
<h1>Index</h1>
@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <Tr>
                <th>Name</th>
                <th>Code</th>
                <th>Date of creation</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </Tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.code</td>
                    <td>@item.name</td>
                    <td>@item.createat</td>
                    <td><a asp-action="Details" class="btn btn-danger">Details</a></td>
                    <td><a asp-action="Update" class="btn btn-success">Update</a></td>
                    <td><a asp-action="Delete" class="btn btn-warning">Delete</a></td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-info">
        <h4>There are no departments :(</h4>
    </div>
}